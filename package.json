{
  "name": "tikbot",
  "version": "1.0.0",
  "description": "TikTok Live Gift Monitor Telegram Bot",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node --env-file=.env dist/index.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky"
  },
  "keywords": [
    "tiktok",
    "telegram",
    "bot",
    "gifts"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@9.15.4",
  "dependencies": {
    "mongoose": "^9.2.3",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "telegraf": "^4.16.3",
    "tiktok-live-connector": "2.1.1-beta1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.2",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
